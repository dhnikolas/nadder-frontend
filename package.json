{
  "name": "nadder-frontend",
  "version": "1.0.0",
  "description": "Аналог Notion для управления проектами и задачами",
  "private": true,
  "main": "electron/dist/main.js",
  "dependencies": {
    "@types/crypto-js": "^4.2.2",
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "autoprefixer": "^10.4.0",
    "axios": "^1.3.0",
    "crypto-js": "^4.2.0",
    "lucide-react": "^0.263.0",
    "postcss": "^8.4.0",
    "react": "^18.2.0",
    "react-dnd": "^16.0.1",
    "react-dnd-html5-backend": "^16.0.1",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "tailwindcss": "^3.2.0",
    "typescript": "^4.9.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "concurrently": "^8.2.2",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "sharp": "^0.34.5",
    "wait-on": "^7.2.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:web": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "electron .",
    "electron:dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && electron .\"",
    "electron:build": "npm run build:electron && electron-builder",
    "electron:build:mac": "npm run build:electron && electron-builder --mac",
    "build:electron": "REACT_APP_API_URL=https://nadder.ru/api/v1 PUBLIC_URL=./ react-scripts build",
    "electron:compile": "tsc -p electron/tsconfig.json",
    "postinstall": "npm run electron:compile"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "build": {
    "appId": "com.nadder.app",
    "productName": "Nadder",
    "publish": null,
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "build/**/*",
      "electron/dist/**/*",
      "!node_modules/**/*",
      "package.json"
    ],
    "extraMetadata": {
      "main": "electron/dist/main.js"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "assets/icons/icon.icns",
      "target": [
        {
          "target": "dmg",
          "arch": [
            "x64",
            "arm64"
          ]
        },
        {
          "target": "zip",
          "arch": [
            "x64",
            "arm64"
          ]
        }
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}
